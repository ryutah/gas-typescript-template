{
  "name": "gas-typescript-template",
  "engines": {
    "node": "20.x",
    "npm": "9.x"
  },
  "scripts": {
    "build:dev": "NODE_ENV=development node build.cjs",
    "build:stg": "NODE_ENV=staging node build.cjs",
    "build:prod": "NODE_ENV=production node build.cjs",
    "fix": "prettier --write 'src/**/*.ts' && eslint --fix src",
    "lint": "eslint src",
    "clasp:pull": "cd prod && clasp pull",
    "clasp:login": "clasp login",
    "clasp:push:dev": "NODE_ENV=development cd prod && clasp push",
    "clasp:push:stg": "NODE_ENV=staging cd prod && clasp push",
    "clasp:push:prod": "NODE_ENV=production cd prod && clasp push"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.64",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "esbuild": "^0.18.3",
    "esbuild-gas-plugin": "^0.5.2",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "gts": "^3.1.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
